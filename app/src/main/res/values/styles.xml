<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Theme.AppCompat.DayNight.NoActionBar" >
        <item name="colorControlNormal">#000000</item>
    </style>
    <style name="AppTheme.AppBarOverlayInfo" parent="Theme.AppCompat.DayNight.NoActionBar" >
        <item name="colorControlNormal">#000000</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
    </style>

    <style name="OverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu</item>
    </style>
    <style name="yourStyle" >
        <item name="android:textSize">22sp</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorPrimary">#e10202</item>
        <!-- Background color when SELECTED -->
        <item name="colorControlHighlight">#e10202</item>
    </style>
    <style name="ThemeToolbar" parent="Theme.AppCompat.Light">

        <!-- navigation icon color -->
        <item name="colorControlNormal">#00ff6f</item>

        <!-- color of the menu overflow icon -->
        <item name="android:textColorSecondary">#00ff6f</item>
    </style>
    <!-- PopuP Enter Exit Animation -->
    <style name="PopupAnimation" parent="Widget.AppCompat.PopupWindow">
        <item name="android:windowEnterAnimation">@anim/bottom_up</item>
        <item name="android:windowExitAnimation">@anim/bottom_down</item>
    </style>
</resources>
